<?xml version="1.0"?>
<launch>



  <!-- move_base setup -->

  <rosparam file="$(find lizi_mapping)/config/costmap_common_params.yaml" command="load" ns="move_base/global_costmap" />
  <rosparam file="$(find lizi_mapping)/config/costmap_common_params.yaml" command="load" ns="move_base/local_costmap" />
  <rosparam file="$(find lizi_mapping)/config/local_costmap_params.yaml" command="load" ns="move_base/local_costmap" />
  <rosparam file="$(find lizi_mapping)/config/global_costmap_params.yaml" command="load" ns="move_base/global_costmap"/>
  <rosparam file="$(find lizi_mapping)/config/move_base_params.yaml" command="load" ns="move_base"/>

  <arg name="base_global_planner" default="navfn/NavfnROS"/>
  <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS"/>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" >
    <param name="base_global_planner" value="$(arg base_global_planner)"/>
    <param name="base_local_planner" value="$(arg base_local_planner)"/>  

    <param name="local_costmap/width" value="3.0"/>
    <param name="local_costmap/height" value="3.0"/> 
    <remap from="cmd_vel" to="nav_vel" />
  </node>



  <!-- Map server -->

  <arg name="have_map_file" default="true"/>
  <arg name="map_file" default="/home/lizi/maps/map_inspire_lab_20180929.yaml"/>

  <group if="$(arg have_map_file)">
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"/>
  </group>



  <!-- Ext map odom -->

  <node name="lizi_mapping_drift_broadcaster_node" pkg="lizi_mapping" type="lizi_mapping_drift_broadcaster_node"/>


</launch>
